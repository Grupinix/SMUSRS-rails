<%= simple_form_for(@appointment) do |f| %>
  <div class="form-group">
    <%= f.input :name, label: 'Nome', placeholder: "Nome completo" %>
  </div>

  <div class="form-group">
    <%= f.input :title, label: 'Título', placeholder: "Título da consulta" %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: 'Descrição' %>
  </div>

  <div class="form-group">
    <%= f.input :address, label: 'Endereço', placeholder: "Endereço da consulta" %>
  </div>

  <div class="form-group">
    <%= f.input :date, label: 'Data da Consulta' %>
  </div>

  <%= f.submit 'Criar Consulta' %>
<% end %>

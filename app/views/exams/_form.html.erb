<%= simple_form_for(@exam) do |f| %>
  <div class="form-group">
    <%= f.input :name, label: 'Nome', placeholder: "Nome completo" %>
  </div>

  <div class="form-group">
    <%= f.input :title, label: 'Título', placeholder: "Título do exame" %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: 'Descrição' %>
  </div>

  <div class="form-group">
    <%= f.input :address, label: 'Endereço', placeholder: "Endereço do exame" %>
  </div>

  <div class="form-group">
    <%= f.input :date, label: 'Data do Exame' %>
  </div>

  <%= f.submit 'Criar Exame' %>
<% end %>
